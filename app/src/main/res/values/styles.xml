<resources>
    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize theme here. -->
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="drawerArrowStyle">@style/DrawerIcon</item>
        <item name="colorPrimary">@color/cardview_dark_background</item>
        <item name="colorPrimaryDark">@color/design_default_color_primary_dark</item>
        <item name="colorAccent">@color/design_default_color_surface</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">

        <item name="android:typeface">sans</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="DrawerIcon" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/black</item>
        <item name="spinBars">true</item>
    </style>
    <style name="AlertDialogCustom" parent="@android:style/Holo.Light.ButtonBar.AlertDialog">
        <item name="android:textColor">#000000</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PopupMenu" parent="@android:style/Widget.Material.Light.PopupWindow">

        <item name="android:popupTheme">@style/Widget.AppCompat.Light.PopupMenu</item>
        <item name="android:popupBackground">#FFFFFF</item>
        <item name="android:textSize">12sp</item>
        <item name="android:popupElevation">5dp</item>
    </style>

        <style name="Theme.Fab_Bottom_app_bar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
            <item name="colorPrimary">#0F9D58</item>
            <item name="colorPrimaryVariant">#0F9D58</item>
            <item name="colorOnPrimary">#000</item>
        </style>


</resources>
